//import java.math.BigInteger;


public class FactolrialClass {
	private int factorial;
	public FactolrialClass(int limit){
		factorial = generateFactorial(limit);
	}
	private int generateFactorial(int x){
		int result;
		if( x == 0){
			result = 1;
		}else{
			result = x * generateFactorial(x-1);
		}
		
		
		return result;
	}
	public String toString(){
		return String.format("The result is: %d\n", factorial);
	}
	

}
